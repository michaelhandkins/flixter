<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://vjs.zencdn.net/7.5.5/video-js.css" rel="stylesheet">

  </head>

  <body>
    <div id="flex-content-container">
<!--- NAVBAR --->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to "Flixter", root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <%= link_to "Course Catalog", courses_path, class: 'nav-link' %>
      </li>
    </ul>

    <ul class="nav navbar-nav ml-auto">

      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Dashboard", dashboard_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      
      <% else %>
      
      <li class="nav-item">
        <%= link_to "Log In", new_user_session_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
      </li>
      <% end %>

    </ul>

</nav>

  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

    <%= yield %>
  
  </div>

  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <b>Teachers</b>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>About</b>
          <br />
          <%= link_to 'Team', team_path %>
          <br />
          <%= link_to 'Careers', careers_path %>
          <br />
          <%= link_to 'Privacy Policy', privacy_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>Contact</b>
          <br />
          my@email.com
          <br />
          One Kendall Square
          <br />
          Cambridge MA, 02113
        </div>
        <div class="col-12 col-sm-3 social">
          <b>Social</b>
          <br />
          <br />
          <%= link_to 'https://github.com/michaelhandkins' do %>
            <i class="fab fa-github-square fa-2x social-icon"></i>
          <% end %>
          <%= link_to 'https://www.facebook.com/profile.php?id=1171523627' do %>
            <i class="fab fa-facebook-square fa-2x social-icon"></i>
          <% end %>
          <%= link_to 'https://www.linkedin.com/in/michaelhandkins/' do %>
            <i class="fab fa-linkedin fa-2x social-icon"></i>
          <% end %>
        </div>
      </div>
    </div>
    <br />
  </div>

  <script src='https://vjs.zencdn.net/7.5.5/video.js'></script>
  </body>
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</html>
